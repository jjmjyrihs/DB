<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的購書之旅</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li><a href='@Url.Action("Index", "Home")'><img src='@Url.Content("http://www2.nkfust.edu.tw/~clshih/img/folder_home2.png")' /></a></li>
                    <li><a href='@Url.Action("Index", "Login")'><img src='@Url.Content("http://icons.iconarchive.com/icons/custom-icon-design/pretty-office-11/128/logout-icon.png")' /></a></li>
                    <li><a href='@Url.Action("Index", "Registered")'><img id="Test" src='@Url.Content("https://upload.wikimedia.org/wikipedia/commons/thumb/0/0a/Noto_Project_Registered_Sign_Emoji.svg/128px-Noto_Project_Registered_Sign_Emoji.svg.png")' /></a></li>
                    <li><a href='@Url.Action("Index", "Order_Search")'><img src='@Url.Content("http://icons.iconarchive.com/icons/custom-icon-design/pretty-office-11/128/search-good-icon.png")' /></a></li>
                    <li><a href='@Url.Action("Index", "CheckOut", new { Order_Quantity=1, Book="1"})'><img src='@Url.Content("http://demo.sc.chinaz.com/Files/pic/icons/5983/g15.png")' /></a></li>
                    <li><a href='@Url.Action("Index", "Update")'><img src='@Url.Content("http://cdn.shopify.com/s/files/1/1440/0654/products/member_one_day_grande.png?v=1488144541")' /></a></li>
                    <li><a href='@Url.Action("Index", "Admin")'><img src='@Url.Content("http://findicons.com/files/icons/50/buuf/128/new_book.png")' /></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 歡迎下次啟程</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
